@model DAW.Models.Feedback

@{
    ViewData["Title"] = "Crează Feedback";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Scor" class="control-label"></label>
        <input asp-for="Scor" class="form-control" />
        <span asp-validation-for="Scor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comentariu" class="control-label"></label>
        <textarea asp-for="Comentariu" class="form-control"></textarea>
        <span asp-validation-for="Comentariu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StireId" class="control-label"></label>
        <select asp-for="StireId" class="form-control" asp-items="ViewBag.Stiri"></select>
        <span asp-validation-for="StireId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Trimite</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
